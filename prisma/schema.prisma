generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  responses Response[]
}

model Response {
  id              String   @id @default(cuid())
  userId          String
  financialYear   String
  electricity     Float
  renewable       Float
  fuel            Float
  emissions       Float
  employees       Float
  femaleEmployees Float
  trainingHours   Float
  communitySpend  Float
  boardPercent    Float
  privacyPolicy   Boolean
  revenue         Float

  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
